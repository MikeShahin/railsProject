<h1>User Signin</h1>
<br>
<% if flash[:message] %>
    <div>
        <p><%=flash[:message] %></p>
    </div>
<% end %>
<%= form_tag('/signin', method: :post) do %>

    <div>
        <%= label_tag(:name, "Username:") %>
        <br>
        <%= text_field_tag(:name) %>
        <br>
        <%= label_tag(:password, "Password:") %>
        <br>
        <%= password_field_tag(:password) %>
        <br>
        <%= submit_tag("Sign In")%>
    </div>
<% end %>
<br>
<div>
    <%= link_to('Log in with Github!', '/auth/github/callback') %>
</div>
<br>
<%= link_to 'Create a new account', new_user_path %>
<br>
<br>
<%= link_to 'Go Home', root_path %>   
